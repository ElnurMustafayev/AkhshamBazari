@model IEnumerable<Product>

@{
    ViewData["Title"] = "Products";
}

<p><a asp-controller="Product" asp-action="create">Create</a> new product</p>

<h2>All Products</h2>
<div>
    @if(Model != null && Model.Any()) {
        foreach(var product in Model) {
            <partial name="_Product" model="@product"/>
        }
    }
    else {
        <div class="alert alert-primary">There is no products yet...</div>
    }
    
</div>

